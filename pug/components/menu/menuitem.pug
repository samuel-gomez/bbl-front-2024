mixin MenuItem({href, label, childsmenu, activePath, icon, title='' })
	li(class=`${prefix}-menu__item${activePath === href ? ` ${prefix}-menu__item--active` : ''}`)
		if(href)
			a(href=`${baseurl}${href}` title=title class=`${prefix}-menu__item-link`)
				if(icon)
					+#{icon}({id:label, className:`${prefix}-menu__item-icon`, modifier:"circle", js:true, img: icon})
				span(class=`${prefix}-menu__item-link-text`) #{label}
		else
			span(class=`${prefix}-menu__item-text ${prefixjs}-menu__item-text`)
				|	#{label}
		if childsmenu && childsmenu.length
			+SubMenu({menu: childsmenu, isChild: true, activePath})
